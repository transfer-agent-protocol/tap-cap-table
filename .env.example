# Offchain db connection string for mongodb
DATABASE_URL="mongodb://tap:tap@localhost:27017/mongo?authSource=admin&retryWrites=true&w=majority"
DATABASE_REPLSET="0"  # set to "1" if using --replSet option in mongo. this allows transactions

# RPC URL for blockchain connection
# Anvil (local):        http://127.0.0.1:8545
# Plume Mainnet:        https://rpc.plume.org
# Plume Testnet:        https://testnet-rpc.plume.org
RPC_URL=http://127.0.0.1:8545

# Chain ID for the network you are deploying to
# Anvil (local):        31337
# Plume Mainnet:        98866
# Plume Testnet:        98867
CHAIN_ID=31337

# Update with the private key of the account that will be used to deploy the contracts
# Using Anvil's first default account in development
PRIVATE_KEY=UPDATE_ME

# Server port
PORT=8293

# --- Frontend (app/) ---

# Reown (WalletConnect) project ID â€” get one at https://cloud.reown.com
NEXT_PUBLIC_REOWN_PROJECT_ID=UPDATE_ME

# Deployed CapTableFactory address
# Anvil (local):        Deployed on each `forge script` run
# Plume Mainnet:        0xcd6Df14406b0569ceEABa884A18717774EdeaCA1
NEXT_PUBLIC_FACTORY_ADDRESS=0xcd6Df14406b0569ceEABa884A18717774EdeaCA1

# Chain ID the frontend targets (same values as CHAIN_ID above)
NEXT_PUBLIC_CHAIN_ID=98866

# API server URL for the frontend to proxy requests
# In development, Next.js rewrites /api/* to this URL
NEXT_PUBLIC_API_URL=http://localhost:8293

# Server wallet address to receive OPERATOR_ROLE on newly created cap tables
# This is the address derived from PRIVATE_KEY above
NEXT_PUBLIC_OPERATOR_ADDRESS=UPDATE_ME

