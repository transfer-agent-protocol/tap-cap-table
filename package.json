{
    "name": "tap-cap-table",
    "version": "1.0.0",
    "private": true,
    "author": "PALMER.EARTH CORP",
    "license": "BUSL-1.1",
    "description": "Transfer Agent Protocol onchain cap table",
    "type": "module",
    "packageManager": "pnpm@10.18.2",
    "scripts": {
        "prod": "tsx server/server.js --no-poller",
        "prod-poller": "tsx server/entry.ts --finalized-only",
        "dev": "tsx watch server/server.js",
        "eslint": "eslint --cache --cache-location=node_modules/.cache/.eslintcache --fix",
        "lint": "pnpm run eslint . --ext .js,.jsx,.ts,.tsx",
        "format": "prettier '**/*' --ignore-unknown --write",
        "typecheck": "concurrently --raw pnpm:typecheck:*",
        "typecheck:app": "tsc --noEmit",
        "deploy-factory": "./scripts/deployFactory.sh",
        "setup": "cd chain && foundryup && forge build --via-ir",
        "test": "cd chain && forge test",
        "docs:dev": "pnpm --filter tap-docs dev",
        "docs:build": "pnpm --filter tap-docs build",
        "docs:start": "pnpm --filter tap-docs start",
        "app:dev": "pnpm --filter tap-app dev",
        "app:build": "pnpm --filter tap-app build",
        "app:start": "pnpm --filter tap-app start",
        "docker:up": "docker compose up -d",
        "docker:down": "docker compose down",
        "docker:logs": "docker compose logs -f",
        "docker:build": "docker compose up -d --build"
    },
    "dependencies": {
        "ajv": "^8.12.0",
        "ajv-formats": "^3.0.1",
        "axios": "^1.4.0",
        "busboy": "^1.6.0",
        "date-fns": "^4.1.0",
        "dotenv": "^17.2.3",
        "ethers": "^6.11.1",
        "express": "^4.18.2",
        "mongoose": "^7.4.2",
        "p-retry": "^6.2.0",
        "solc": "^0.8.20",
        "tsx": "^4.7.0",
        "xstate": "^4.38.2",
        "yauzl": "^2.10.0"
    },
    "browserslist": [
        "defaults",
        "not IE 11",
        "maintained node versions"
    ],
    "pnpm": {
        "overrides": {
            "flexsearch": "0.7.31"
        }
    },
    "devDependencies": {
        "@eslint/js": "^9.37.0",
        "@types/node": "^24.6.2",
        "eslint": "^9.37.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-import": "^2.32.0",
        "globals": "^16.4.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.3",
        "prettier": "^3.6.2",
        "solhint": "^3.4.1",
        "typescript": "^5.3.3",
        "typescript-eslint": "^8.45.0",
        "uuid": "^9.0.0"
    }
}
